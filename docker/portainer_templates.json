{
    "version": "3",
    "templates": [
        {
            "id": 1,
            "type": 1,
            "name": "nginx-proxy-manager",
            "title": "Nginx Proxy Manager",
            "image": "jc21/nginx-proxy-manager:latest",
            "platform": "linux",
            "restart_policy":"unless-stopped",
            "logo": "https://raw.githubusercontent.com/Qballjos/portainer_templates/master/Images/proxy_mgr.png",
            "description": "Nginx Proxy Manager enables you to easily forward to your websites running at home or otherwise, including free SSL",
            "env": [
                {
                    "label": "DB_SQLITE_FILE",
                    "name": "DB_SQLITE_FILE",
                    "default": "/data/database.sqlite"
                }
            ],
            "ports":[
                "80:80/tcp",
                "81:81/tcp",
                "443:443/tcp"
            ],
            "volumes": [
                {"container":"/data"},
                {"container": "/etc/letsencrypt"}
            ]
        },
        {
            "id": 2,
            "type": 1,
            "name": "vaultwarden",
            "title": "Vaultwarden",
            "image": "vaultwarden/server:latest",
            "platform": "linux",
            "restart_policy":"unless-stopped",
            "logo": "https://raw.githubusercontent.com/Qballjos/portainer_templates/master/Images/bitwarden.png",
            "description": "Locally hosted Password manager based on Bitwarden",
            "ports":[
                ":80/tcp"
            ],
            "volumes": [
                {"container":"/config"}
            ]
        },
        {
            "id": 3,
            "type": 1,
            "name": "echobase",
            "title": "Echobase",
            "image": "ghcr.io/kammetherell/echobase:latest",
            "platform": "linux",
            "restart_policy":"unless-stopped",
            "description": "Homelab controller including managing backups to S3",
            "ports":[
                ":5000/tcp"
            ],
            "volumes": [
                {"container":"/app/db"},
                {
                    "container":"/var/lib/docker.sock",
                    "bind":"/var/lib/docker.sock"
                }
            ]
        },
        ,
        {
            "id": 4,
            "type": 1,
            "name": "homeassistant",
            "title": "Homeassistant",
            "image": "linuxserver/homeassistant:latest",
            "platform": "linux",
            "restart_policy":"unless-stopped",
            "description": "Open source home automation that puts local control and privacy first",
            "network":"host",
            "ports":[
                "8123:8123/tcp"
            ],
            "volumes": [
                {
                    "container":"/config",
                    "bind":"/homeassistant/config"
                }
            ],
            "env": [
                {
                    "name": "PUID",
                    "label": "PUID",
                    "default": "1024",
                    "description":"for GroupID"
                },
                {
                    "name": "PGID",
                    "label": "PGID",
                    "default": "100",
                    "description":"for UserID"
                },
                {
                    "name": "TZ",
                    "label": "TZ",
                    "default": "Europe/London",
                    "description":"Specify a timezone"
                }
            ]
        }
    ]
}